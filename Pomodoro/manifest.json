{
    "name" : "Pomofocus",
    "version" : "1.0",
    "manifest_version" : 3,
    "description" : "A simple Pomodoro Timer extension",
    "permissions" : ["activeTab"],
    "action" : {
        "default_popup" : "popup.html",
        "default_icon": {
            
            "24": "start.png"
           
            
          }
        
    },
    "icons": {
        "24": "start.png"

      },
    

    "content_scripts" : [
        {
            "matches" : ["<all_urls>"],
            "js" : ["popup.js"]
        }
    ]
}